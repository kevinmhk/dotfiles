layout {
    tab name="Dev" {
      pane size=1 borderless=true {
          plugin location="tab-bar"
      }
      pane split_direction="vertical" {
        pane command="codex" size="35%" name="codex" {
          args "--yolo" "--search"
        }
        pane size="65%" split_direction="horizontal" {
          pane command="yazi" size="70%" name="yazi + nvim"
          pane size="30%" name="zsh"
        }
      }
      pane size=1 borderless=true {
          plugin location="status-bar"
      }
    }
    tab name="Git" {
      pane size=1 borderless=true {
        plugin location="tab-bar"
      }
      pane command="lazygit" name="lazygit"
      pane size=1 borderless=true {
        plugin location="status-bar"
      }
    }
    tab name="Write" {
      pane size=1 borderless=true {
        plugin location="tab-bar"
      }
      pane command="yazi" name="yazi + nvim"
      pane size="1" borderless=true {
        plugin location="status-bar"
      }
    }
    tab name="Search" {
      pane size=1 borderless=true {
        plugin location="tab-bar"
      }
      pane split_direction="vertical" {
        pane command="fzf" size="35%" name="fzf + fzfn" {
          args "--version"
        }
        pane size="65%" split_direction="horizontal" {
          pane command="rg" size="70%" name="rg" {
            args "-V"
          }
          pane size="30%" name="fd" command="fd"
        }
      }
    }
}
